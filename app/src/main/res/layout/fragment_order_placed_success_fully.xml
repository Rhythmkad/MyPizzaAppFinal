<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.OrderPlacedSuccessfullyFragment">

<!--  layout to show thank you message to the user  -->
    <include
        android:id="@+id/order_placed_layout"
        layout="@layout/empty_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

<!--  close screen layout  -->
    <LinearLayout
        android:id="@+id/close_screen_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/_8sdp"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/close_image"
            tools:ignore="ContentDescription"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Close"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:fontFamily="@font/rounded_elegance"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>